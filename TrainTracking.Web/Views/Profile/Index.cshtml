@model TrainTracking.Domain.Entities.User

@{
    ViewData["Title"] = "الملف الشخصي";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-user"></i> الملف الشخصي</h3>
                </div>
                <div class="card-body">

                    <!-- Profile Picture Section -->
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                        {
                            <img src="@Model.ProfilePicturePath" class="rounded-circle border border-3 border-primary" width="180" height="180" alt="صورة الملف الشخصي">
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center" style="width: 180px; height: 180px;">
                                <i class="fas fa-user fa-5x text-white"></i>
                            </div>
                        }
                        <h4 class="mt-3">@Model.FullName</h4>
                        <p class="text-muted">@@@Model.Username</p>
                    </div>

                    <!-- User Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">البريد الإلكتروني</label>
                                <p class="fw-bold"><i class="fas fa-envelope text-primary"></i> @Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">رقم الهاتف</label>
                                <p class="fw-bold"><i class="fas fa-phone text-primary"></i> @Model.PhoneNumber</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">تاريخ الميلاد</label>
                                <p class="fw-bold">
                                    <i class="fas fa-calendar text-primary"></i>
                                    @(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "غير محدد")
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted small">المدينة</label>
                                <p class="fw-bold">
                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                    @(Model.City ?? "غير محدد")
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="text-muted small">العنوان</label>
                                <p class="fw-bold">
                                    <i class="fas fa-home text-primary"></i>
                                    @(Model.Address ?? "غير محدد")
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="text-muted small">نبذة عني</label>
                                <p class="fw-bold">@(Model.Bio ?? "لا توجد نبذة")</p>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-action="Edit" class="btn btn-primary btn-lg">
                            <i class="fas fa-edit"></i> تعديل الملف الشخصي
                        </a>
                        <button type="button" class="btn btn-warning btn-lg" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                            <i class="fas fa-key"></i> تغيير كلمة المرور
                        </button>
                    </div>

                </div>
                <div class="card-footer text-muted text-center">
                    <small>تاريخ الإنشاء: @Model.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")</small>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <br>
                        <small>آخر تحديث: @Model.UpdatedAt.Value.ToString("dd/MM/yyyy hh:mm tt")</small>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ChangePassword" method="post">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title"><i class="fas fa-key"></i> تغيير كلمة المرور</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="userId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">كلمة المرور الحالية</label>
                        <input type="password" name="currentPassword" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">كلمة المرور الجديدة</label>
                        <input type="password" name="newPassword" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">تأكيد كلمة المرور الجديدة</label>
                        <input type="password" name="confirmPassword" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-warning">حفظ التغييرات</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}