@model TrainTracking.Domain.Entities.ApplicationUser

@{
    ViewData["Title"] = "الملف الشخصي";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white py-4 text-center">
                    <h3 class="mb-0 fw-bold"><i class="fas fa-user-circle me-2"></i> الملف الشخصي</h3>
                </div>
                <div class="card-body p-5">

                    <!-- Profile Top Section -->
                    <div class="text-center mb-5">
                        <div class="position-relative d-inline-block">
                            @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                            {
                                <img src="@Model.ProfilePicturePath" class="rounded-circle border border-4 border-light shadow" width="160" height="160" style="object-fit: cover;" alt="Profile Picture">
                            }
                            else
                            {
                                <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center shadow" style="width: 160px; height: 160px;">
                                    <i class="fas fa-user fa-5x text-secondary opacity-50"></i>
                                </div>
                            }
                        </div>
                        <h2 class="mt-4 fw-bold">@Model.FullName</h2>
                        <p class="text-muted fs-5">@@@Model.UserName</p>
                        
                        <div class="d-inline-flex align-items-center bg-warning bg-opacity-10 text-warning px-4 py-2 rounded-pill mt-2">
                            <i class="fas fa-coins me-2"></i>
                            <span class="fw-bold">@Model.Points رصيد النقاط</span>
                        </div>
                    </div>

                    <!-- Details Grid -->
                    <div class="row g-4 mt-2">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted small text-uppercase fw-bold mb-1 d-block">البريد الإلكتروني</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-envelope text-primary me-3 fs-5"></i>
                                    <span class="fw-semibold">@Model.Email</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted small text-uppercase fw-bold mb-1 d-block">رقم الهاتف</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-phone text-primary me-3 fs-5"></i>
                                    <span class="fw-semibold">@(Model.PhoneNumber ?? "غير محدد")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted small text-uppercase fw-bold mb-1 d-block">تاريخ الميلاد</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-alt text-primary me-3 fs-5"></i>
                                    <span class="fw-semibold">@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "غير محدد")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted small text-uppercase fw-bold mb-1 d-block">العنوان</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-map-marker-alt text-primary me-3 fs-5"></i>
                                    <span class="fw-semibold">@($"{Model.City ?? "غير محدد"}, {Model.Country ?? ""}")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted small text-uppercase fw-bold mb-1 d-block">نبذة عني</label>
                                <div class="d-flex">
                                    <i class="fas fa-quote-right text-primary me-3 mt-1 fs-5 opacity-25"></i>
                                    <p class="mb-0 text-muted italic">@(Model.Bio ?? "لا توجد نبذة تعريفية متاحة.")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-5 pt-3 d-flex flex-column flex-md-row gap-3 justify-content-center">
                        <a asp-action="Edit" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm hover-up">
                            <i class="fas fa-user-edit me-2"></i> تعديل البيانات
                        </a>
                        <button type="button" class="btn btn-outline-warning btn-lg px-5 rounded-pill shadow-sm" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                            <i class="fas fa-key me-2"></i> تغيير كلمة المرور
                        </button>
                    </div>

                </div>
                <div class="card-footer bg-light py-3 text-center border-0">
                    <div class="text-muted small">
                        <span class="me-3"><i class="far fa-clock me-1"></i> انضم منذ: @Model.CreatedAt.ToString("MMM yyyy")</span>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <span><i class="fas fa-sync-alt me-1"></i> آخر تحديث: @Model.UpdatedAt.Value.ToString("dd/MM/yyyy")</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <form asp-action="ChangePassword" method="post">
                <div class="modal-header border-bottom-0 pt-4 px-4">
                    <h5 class="modal-title fw-bold"><i class="fas fa-shield-alt text-warning me-2"></i> تغيير كلمة المرور</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="userId" value="@Model.Id" />

                    <div class="mb-4">
                        <label class="form-label fw-semibold">كلمة المرور الحالية</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="fas fa-lock text-muted"></i></span>
                            <input type="password" name="currentPassword" class="form-control bg-light border-0 py-2" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">كلمة المرور الجديدة</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="fas fa-key text-muted"></i></span>
                            <input type="password" name="newPassword" class="form-control bg-light border-0 py-2" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">تأكيد كلمة المرور</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="fas fa-check-circle text-muted"></i></span>
                            <input type="password" name="confirmPassword" class="form-control bg-light border-0 py-2" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top-0 pb-4 px-4 justify-content-center">
                    <button type="button" class="btn btn-light px-4 rounded-pill" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-warning px-4 rounded-pill fw-bold text-white shadow-sm">حفظ التغييرات</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

<style>
    .hover-up { transition: transform 0.2s; }
    .hover-up:hover { transform: translateY(-3px); }
</style>