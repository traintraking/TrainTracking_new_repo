@using TrainTracking.Application.DTOs
@model ResetPasswordDTO

<h2>إعادة تعيين كلمة المرور</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Token" />

    <div class="form-group">
        <label asp-for="Password">كلمة المرور الجديدة</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">تأكيد كلمة المرور</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">إعادة تعيين كلمة المرور</button>
</form>