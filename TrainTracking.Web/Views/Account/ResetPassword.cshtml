@using TrainTracking.Application.DTOs
@model ResetPasswordDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تعيين كلمة مرور جديدة - Sikka</title>
    <script>
        (function () {
            const theme = document.cookie.split('; ').find(row => row.startsWith('theme='))?.split('=')[1];
            if (theme) {
                document.documentElement.setAttribute('data-theme', theme);
            }
        })();
    </script>
    <link href="/css/site.css" rel="stylesheet">
    <link href="/css/auth.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="mesh-bg"></div>
    

    <div class="auth-container">
        <div class="glass-card">
            <img src="/images/logo1.png" alt="Sikka" class="brand-logo">
            
            <h1 class="auth-title">تعيين كلمة مرور جديدة 🆕</h1>
            <p class="auth-subtitle">أدخل كلمة المرور الجديدة الخاصة بك لتأمين حسابك.</p>

            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Token" />
                
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 14px; text-align: center;"></div>

                <div class="form-group">
                    <label class="form-label">كلمة المرور الجديدة</label>
                    <div class="input-wrapper">
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required dir="ltr">
                        <i class="fas fa-lock input-icon"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger" style="font-size: 12px; display: block; margin-top: -15px; margin-bottom: 20px;"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">تأكيد كلمة المرور</label>
                    <div class="input-wrapper">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" required dir="ltr">
                        <i class="fas fa-check-double input-icon"></i>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 12px; display: block; margin-top: -15px; margin-bottom: 20px;"></span>
                </div>

                <button type="submit" class="btn-submit">
                    إعادة تعيين كلمة المرور
                </button>
            </form>
        </div>
    </div>
</body>
</html>