<script>
    let selectedSeats = [];
    const unitPriceElement = document.getElementById('unitPrice');
    const basePrice = parseFloat(unitPriceElement.value) || 0;
    console.log("Base Price Detected:", basePrice);
    function selectSeat(el, num) {
        if (el.classList.contains('taken')) return;
        const multiplier = parseFloat(el.getAttribute('data-multiplier'));
        const index = selectedSeats.findIndex(s => s.num === num);
        if (index > -1) {
            selectedSeats.splice(index, 1);
            el.classList.remove('selected');
        } else {
            if (selectedSeats.length >= 3) {
                alert("Ø§Ù„Ø­Ø¯ Ø§Ù„Ø£Ù‚ØµÙ‰ Ù‡Ùˆ 3 Ù…Ù‚Ø§Ø¹Ø¯");
                return;
            }
            selectedSeats.push({ num: num, mult: multiplier });
            el.classList.add('selected');
        }
        updateBookingInfo();
    }
    function updateBookingInfo() {
        const seatNumbers = selectedSeats.map(s => s.num);  // Ù‡Ù†Ø§ Ø§Ù„ØªØµØ­ÙŠØ­
        document.getElementById('txtSeats').innerText = seatNumbers.length > 0 ? seatNumbers.join(', ') : "--";
        document.getElementById('selectedSeatsInput').value = seatNumbers.join(',');
        let total = 0;
        selectedSeats.forEach(s => {
            total += (basePrice * s.mult);
        });
        document.getElementById('txtTotal').innerText = total.toFixed(3);
        document.getElementById('btnSubmit').disabled = selectedSeats.length === 0;
    }
</script>