@model List<TrainTracking.Domain.Entities.Booking>
@using TrainTracking.Domain.Enums

<div class="row g-4">
    @foreach (var booking in Model)
    {
        var statusClass = booking.Status switch
        {
            BookingStatus.Confirmed => "success",
            BookingStatus.Pending => "warning",
            BookingStatus.PendingPayment => "info",
            BookingStatus.Cancelled => "danger",
            _ => "secondary"
        };
        var statusText = booking.Status switch
        {
            BookingStatus.Confirmed => "مؤكد",
            BookingStatus.Pending => "قيد الانتظار",
            BookingStatus.PendingPayment => "بانتظار الدفع",
            BookingStatus.Cancelled => "ملغي",
            _ => booking.Status.ToString()
        };

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 hover-lift @(booking.Status == BookingStatus.Cancelled ? "opacity-75" : "")">
                <!-- Header with Status Badge -->
                <div class="card-header border-0 p-4 pb-3 d-flex justify-content-between align-items-center">
                    <span class="badge bg-soft-@statusClass text-@statusClass rounded-pill px-3 py-2 fw-bold">
                        <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i> @statusText
                    </span>
                    <span class="text-muted small">
                        <i class="far fa-calendar me-1"></i> @booking.BookingDate.ToString("dd/MM/yyyy")
                    </span>
                </div>

                <!-- Body with Trip Details -->
                <div class="card-body p-4 pt-0">
                    <!-- Train Info -->
                    <div class="d-flex align-items-center mb-4 p-3 card-detail-box rounded-3">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-3 ms-3">
                            <i class="fas fa-train fs-4"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="fw-bold mb-1">قطار @(booking.Trip?.Train?.TrainNumber ?? "N/A")</h5>
                            <div class="d-flex align-items-center gap-3">
                                <small class="text-muted">
                                    <i class="fas fa-chair me-1"></i> مقعد <span class="text-dark fw-bold">@booking.SeatNumber</span>
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-money-bill-wave me-1"></i> <span class="text-dark fw-bold">@booking.Price د.ك</span>
                                </small>
                                @if (booking.Status == BookingStatus.Confirmed)
                                {
                                    <small class="text-warning fw-bold ms-2">
                                        <i class="fas fa-coins me-1"></i> +@((int)(booking.Price * 10)) نقطة
                                    </small>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Route Info -->
                    <div class="row g-3 mb-4">
                        <div class="col-5">
                            <div class="text-center p-3 card-detail-box rounded-3">
                                <small class="text-muted d-block mb-1">من</small>
                                <div class="fw-bold text-primary">@(booking.Trip?.FromStation?.Name ?? "غير محدد")</div>
                                <small class="text-muted">
                                    <i class="far fa-clock me-1"></i> @(booking.Trip?.DepartureTime.ToString("HH:mm") ?? "--:--")
                                </small>
                            </div>
                        </div>
                        <div class="col-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-arrow-left text-primary fs-4"></i>
                        </div>
                        <div class="col-5">
                            <div class="text-center p-3 card-detail-box rounded-3">
                                <small class="text-muted d-block mb-1">إلى</small>
                                <div class="fw-bold text-primary">@(booking.Trip?.ToStation?.Name ?? "غير محدد")</div>
                                <small class="text-muted">
                                    <i class="far fa-clock me-1"></i> @(booking.Trip?.ArrivalTime.ToString("HH:mm") ?? "--:--")
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        @if (booking.Status == BookingStatus.Confirmed)
                        {
                            <a asp-action="DownloadTicket" asp-route-id="@booking.Id" class="btn btn-outline-primary rounded-pill fw-bold">
                                <i class="fas fa-download me-2"></i> تحميل التذكرة
                            </a>
                            @if (booking.Trip != null && booking.Trip.DepartureTime > DateTimeOffset.Now)
                            {
                                <a asp-action="Cancel" asp-route-id="@booking.Id" class="btn btn-outline-danger rounded-pill fw-bold">
                                    <i class="fas fa-times me-2"></i> إلغاء الحجز
                                </a>
                            }
                        }
                        else if (booking.Status == BookingStatus.PendingPayment)
                        {
                            <a asp-action="Payment" asp-route-id="@booking.Id" class="btn btn-primary rounded-pill fw-bold shadow-sm warning-pulse">
                                <i class="fas fa-credit-card me-2"></i> إتمام الدفع
                            </a>
                            <form asp-action="DeleteBooking" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد من إلغاء هذا الحجز؟');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@booking.Id" />
                                <button type="submit" class="btn btn-sm btn-link text-muted text-decoration-none w-100 mt-1">
                                    <i class="fas fa-times me-1"></i> إلغاء
                                </button>
                            </form>
                        }
                        else if (booking.Status == BookingStatus.Cancelled)
                        {
                            <form asp-action="DeleteBooking" method="post" class="d-inline" onsubmit="return confirm('هل أنت متأكد من حذف هذا الحجز نهائياً؟');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@booking.Id" />
                                <button type="submit" class="btn btn-outline-secondary rounded-pill fw-bold w-100">
                                    <i class="fas fa-trash-alt me-2"></i> حذف من القائمة
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Status Badge Theming */
    .bg-soft-success { background-color: rgba(25, 135, 84, 0.1); color: #198754; }
    .bg-soft-warning { background-color: rgba(255, 193, 7, 0.1); color: #ffc107; }
    .bg-soft-danger { background-color: rgba(220, 53, 69, 0.1); color: #dc3545; }
    .bg-soft-info { background-color: rgba(13, 202, 240, 0.1); color: #0dcaf0; }
    
    [data-theme="dark"] .bg-soft-success { background-color: rgba(25, 135, 84, 0.2); color: #75b798; }
    [data-theme="dark"] .bg-soft-warning { background-color: rgba(255, 193, 7, 0.2); color: #ffda6a; }
    [data-theme="dark"] .bg-soft-danger { background-color: rgba(220, 53, 69, 0.2); color: #ea868f; }
    [data-theme="dark"] .bg-soft-info { background-color: rgba(13, 202, 240, 0.2); color: #6edff6; }

    /* Card Details Theming */
    /* Instead of bg-light, we use a transparent layer */
    .card-detail-box {
        background-color: #f8f9fa; /* Light mode */
        color: #212529;
    }
    [data-theme="dark"] .card-detail-box {
        background-color: rgba(255, 255, 255, 0.05); /* Dark mode */
        color: #e0e0e0;
    }

    [data-theme="dark"] .text-dark { color: #f8f9fa !important; }

    .hover-lift { transition: all 0.3s ease; }
    .hover-lift:hover { transform: translateY(-5px); }
    
    .warning-pulse {
        animation: pulse-border 2s infinite;
    }
    @@keyframes pulse-border {
        0% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0.4); }
        70% { box-shadow: 0 0 0 10px rgba(13, 110, 253, 0); }
        100% { box-shadow: 0 0 0 0 rgba(13, 110, 253, 0); }
    }
</style>
