@{
    ViewData["Title"] = "تم الحجز بنجاح";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 p-5">
                <div class="mb-4">
                    <div class="icon-box bg-success text-white rounded-circle mx-auto d-flex align-items-center justify-content-center shadow-lg hover-scale" 
                         style="width: 100px; height: 100px; font-size: 3rem;">
                        <i class="fas fa-check"></i>
                    </div>
                </div>
                <h2 class="fw-bold text-success mb-3">تم الحجز بنجاح!</h2>
                <p class="text-muted fs-5 mb-4">تم تسجيل حجزك، نتمنى لك رحلة ممتعة وآمنة.</p>
                
                <div class="d-grid gap-2 col-8 mx-auto">
                    @if (ViewBag.BookingIds != null)
                    {
                        <a asp-action="DownloadTickets" asp-route-ids="@ViewBag.BookingIds" class="btn btn-success btn-lg rounded-pill shadow-sm mb-2">
                            <i class="fas fa-file-pdf me-2"></i> تحميل جميع التذاكر (PDF)
                        </a>
                    }
                    <a asp-controller="Trips" asp-action="Index" class="btn btn-outline-primary btn-lg rounded-pill shadow-sm">
                        <i class="fas fa-calendar-alt me-2"></i> العودة للرحلات
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
