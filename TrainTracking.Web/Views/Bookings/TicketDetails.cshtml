@model TrainTracking.Domain.Entities.Booking

@{
    Layout = null;
    ViewData["Title"] = "تفاصيل التذكرة";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تذكرة - @Model.PassengerName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
        }
        .ticket-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            background: white;
            position: relative;
        }
        .ticket-header {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        .ticket-body {
            padding: 30px;
        }
        .status-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: bold;
            font-size: 0.9rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .bg-confirmed { background-color: #2ecc71; color: white; }
        .bg-cancelled { background-color: #e74c3c; color: white; }
        .bg-pending { background-color: #f1c40f; color: black; }
        
        .info-label {
            color: #7f8c8d;
            font-size: 0.85rem;
            margin-bottom: 5px;
        }
        .info-value {
            font-weight: 700;
            color: #2c3e50;
            font-size: 1.1rem;
        }
        .dashed-line {
            border-top: 2px dashed #ecf0f1;
            margin: 20px 0;
            position: relative;
        }
        .dashed-line::before, .dashed-line::after {
            content: '';
            position: absolute;
            top: -10px;
            width: 20px;
            height: 20px;
            background-color: #f8f9fa;
            border-radius: 50%;
        }
        .dashed-line::before { left: -40px; }
        .dashed-line::after { right: -40px; }

        .train-icon-bg {
            background: rgba(255,255,255,0.2);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center min-vh-100 p-3">
    <div class="container" style="max-width: 500px;">
        <div class="ticket-card">
            @{
                var statusClass = Model.Status switch
                {
                    TrainTracking.Domain.Enums.BookingStatus.Confirmed => "bg-confirmed",
                    TrainTracking.Domain.Enums.BookingStatus.Cancelled => "bg-cancelled",
                    _ => "bg-pending"
                };
                var statusText = Model.Status switch
                {
                    TrainTracking.Domain.Enums.BookingStatus.Confirmed => "مؤكد ✅",
                    TrainTracking.Domain.Enums.BookingStatus.Cancelled => "ملغي ❌",
                    _ => "قيد المعالجة ⏳"
                };
            }
            <div class="status-badge @statusClass">
                @statusText
            </div>

            <div class="ticket-header">
                <div class="train-icon-bg">
                    <i class="fas fa-train fa-2x"></i>
                </div>
                <h4 class="mb-1 fw-bold">تذكرة سفر إلكترونية</h4>
                <p class="mb-0 opacity-75 small">KuwGo Inc. - Kuwait Railways</p>
            </div>

            <div class="ticket-body">
                <div class="text-center mb-4">
                    <div class="info-label">المسافر</div>
                    <div class="info-value fs-4">@Model.PassengerName</div>
                </div>

                <div class="row text-center mb-3">
                    <div class="col-6">
                        <div class="info-label">من</div>
                        <div class="info-value text-primary">@(Model.Trip?.FromStation?.Name ?? "غير محدد")</div>
                        <div class="small text-muted">@(Model.Trip?.DepartureTime.ToString("HH:mm") ?? "--:--")</div>
                    </div>
                    <div class="col-6">
                        <div class="info-label">إلى</div>
                        <div class="info-value text-primary">@(Model.Trip?.ToStation?.Name ?? "غير محدد")</div>
                        <div class="small text-muted">@(Model.Trip?.ArrivalTime.ToString("HH:mm") ?? "--:--")</div>
                    </div>
                </div>

                <div class="dashed-line"></div>

                <div class="row g-3">
                    <div class="col-6">
                        <div class="p-3 bg-light rounded-3 text-center">
                            <div class="info-label">رقم القطار</div>
                            <div class="info-value">@(Model.Trip?.Train?.TrainNumber ?? "N/A")</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded-3 text-center">
                            <div class="info-label">المقعد</div>
                            <div class="info-value">@Model.SeatNumber</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded-3 text-center">
                            <div class="info-label">التاريخ</div>
                            <div class="info-value small">@(Model.Trip?.DepartureTime.ToString("yyyy-MM-dd") ?? "--")</div>
                        </div>
                    </div>
                     <div class="col-6">
                        <div class="p-3 bg-light rounded-3 text-center">
                            <div class="info-label">رقم الحجز</div>
                            <div class="info-value small">#@Model.Id.ToString().Substring(0, 8).ToUpper()</div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                     <p class="text-muted small mb-0">نتمنى لكم رحلة سعيدة وآمنة!</p>
                </div>
            </div>
            
            <div class="bg-light p-3 text-center border-top">
                <small class="text-muted fw-bold">www.kuwgo.com</small>
            </div>
        </div>
    </div>
</body>
</html>
