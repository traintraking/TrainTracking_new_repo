@model TrainTracking.Domain.Entities.Booking
@using Microsoft.AspNetCore.Identity
@using TrainTracking.Domain.Entities
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = null;
    ViewData["Title"] = "تفاصيل التذكرة";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تذكرة - @Model.PassengerName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
        }
        .ticket-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            background: white;
            position: relative;
        }
        .ticket-header {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        .ticket-body {
            padding: 30px;
        }
        .status-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: bold;
            font-size: 0.9rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .bg-confirmed { background-color: #2ecc71; color: white; }
        .bg-cancelled { background-color: #e74c3c; color: white; }
        .bg-pending { background-color: #f1c40f; color: black; }
        
        .info-label {
            color: #7f8c8d;
            font-size: 0.85rem;
            margin-bottom: 5px;
        }
        .info-value {
            font-weight: 700;
            color: #2c3e50;
            font-size: 1.1rem;
        }
        .dashed-line {
            border-top: 2px dashed #ecf0f1;
            margin: 20px 0;
            position: relative;
        }
        .dashed-line::before, .dashed-line::after {
            content: '';
            position: absolute;
            top: -10px;
            width: 20px;
            height: 20px;
            background-color: #f8f9fa;
            border-radius: 50%;
        }
        .dashed-line::before { left: -40px; }
        .dashed-line::after { right: -40px; }

        .train-icon-bg {
            background: rgba(255,255,255,0.2);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center min-vh-100 p-0 m-0" style="background-color: #333;">
    <div class="ticket-container bg-white position-relative overflow-hidden" style="width: 800px; max-width: 100%; box-shadow: 0 0 50px rgba(0,0,0,0.5);">
        
        <!-- Header -->
        <div class="ticket-header d-flex justify-content-between align-items-center px-4 py-3" style="background-color: #1a3c6e; height: 120px;">
            <div class="bg-white p-2 d-flex align-items-center justify-content-center" style="width: 100px; height: 100%;">
                <img src="/images/logo.png" alt="KuwGo" style="max-width: 80%; max-height: 80%;">
            </div>
            <div class="text-white text-center flex-grow-1" style="letter-spacing: 5px; font-weight: 300; font-size: 1.2rem;">
                OFFICIAL E-TICKET
            </div>
            <div class="text-white text-end">
                <h2 class="m-0 fw-bold" style="font-size: 2.5rem;">KuwGo</h2>
            </div>
        </div>

        <!-- Body -->
        <div class="ticket-content p-5">
            <div class="row">
                <!-- Data Columns -->
                <div class="col-8">
                    <!-- Row 1: Date & Passenger Name -->
                    <div class="row mb-4 border-bottom pb-4" style="border-color: #eee !important;">
                        <div class="col-6 text-start">
                            <div class="text-muted small mb-1" style="font-size: 0.8rem;">التاريخ / etaD</div>
                            <div class="fw-bold fs-4" style="color: #1a3c6e;">@(Model.Trip?.DepartureTime.ToString("yyyy-MM-dd") ?? "--")</div>
                        </div>
                        <div class="col-6 text-end">
                            <div class="text-muted small mb-1" style="font-size: 0.8rem;">المسافر / regnessaP</div>
                            <div class="fw-bold fs-4" style="color: #1a3c6e;">@Model.PassengerName</div>
                             @{
                                var user = await UserManager.FindByIdAsync(Model.UserId);
                                if (user != null && !string.IsNullOrEmpty(user.NationalId))
                                {
                                    <div class="small text-muted mt-1" style="font-size: 0.75rem;">ID: @user.NationalId</div>
                                }
                            }
                        </div>
                    </div>

                    <!-- Row 2: Stations -->
                    <div class="row mb-4 border-bottom pb-4" style="border-color: #eee !important;">
                         <div class="col-6 text-start">
                            <div class="text-muted small mb-1" style="font-size: 0.8rem;">إلى / oT</div>
                            <div class="fw-bold fs-3 text-danger">@(Model.Trip?.ToStation?.Name ?? "غير محدد") <span class="text-muted fs-5">--></span></div>
                             <div class="fs-4">@(Model.Trip?.ArrivalTime.ToString("HH:mm") ?? "--:--")</div>
                        </div>
                        <div class="col-6 text-end">
                            <div class="text-muted small mb-1" style="font-size: 0.8rem;">من / morF</div>
                            <div class="fw-bold fs-3 text-danger">@(Model.Trip?.FromStation?.Name ?? "غير محدد")</div>
                             <div class="fs-4">@(Model.Trip?.DepartureTime.ToString("HH:mm") ?? "--:--")</div>
                        </div>
                    </div>

                    <!-- Row 3: Price, Seat, Train -->
                    <div class="row">
                        <div class="col-4 text-center">
                             <div class="text-muted small mb-1" style="font-size: 0.8rem;">السعر / ecirP</div>
                             <div class="fw-bold fs-5">DK @Model.Price.ToString("F3")</div>
                        </div>
                        <div class="col-4 text-center">
                             <div class="text-muted small mb-1" style="font-size: 0.8rem;">المقعد / taeS</div>
                             <div class="fw-bold fs-5">@Model.SeatNumber</div>
                        </div>
                         <div class="col-4 text-center">
                             <div class="text-muted small mb-1" style="font-size: 0.8rem;">القطار / niarT</div>
                             <div class="fw-bold fs-5">@(Model.Trip?.Train?.TrainNumber ?? "N/A")</div>
                        </div>
                    </div>

                </div>

                <!-- QR Code Column -->
                <div class="col-4 text-center d-flex flex-column justify-content-center align-items-center ps-4" style="border-left: 1px dashed #ccc;">
                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=@Model.Id" alt="QR Code" class="img-fluid mb-2" style="max-width: 160px;">
                    <div class="fw-bold small mt-2">ID: @Model.Id.ToString().Substring(0, 8).ToUpper()</div>
                    <div class="text-muted x-small" style="font-size: 0.7rem;">Scan to verify</div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="ticket-footer text-center py-3 bg-light" style="font-size: 0.8rem; color: #999;">
            pirt efas a evaH - نتمنى لكم رحلة آمنة وسعيدة
        </div>
        
        <!-- Bottom Green Bar -->
        <div style="height: 10px; background-color: #2ecc71; width: 100%;"></div>

    </div>
</body>
</html>
