@model IEnumerable<TrainTracking.Domain.Entities.Trip>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["LiveTrackingTitle"];
}

@if (ViewBag.DebugInfo != null)
{
    <div class="alert alert-warning m-3" style="position: fixed; top: 70px; left: 50%; transform: translateX(-50%); z-index: 9999; max-width: 600px;">
        <strong>üîç Debug Info:</strong> @ViewBag.DebugInfo
    </div>
}

<style>
    #liveMapContent {
        height: calc(100vh - 72px);
        display: flex;
        overflow: hidden;
    }

    #mainLiveMap {
        flex-grow: 1;
        height: 100%;
        z-index: 1;
    }

    .live-sidebar {
        width: 350px;
        background: white;
        border-right: 1px solid #eee;
        display: flex;
        flex-direction: column;
        height: 100%;
        z-index: 2;
        box-shadow: 5px 0 15px rgba(0,0,0,0.05);
    }

    .sidebar-header {
        padding: 20px;
        background: #f8f9fa;
        border-bottom: 1px solid #eee;
    }

    .train-list {
        flex-grow: 1;
        overflow-y: auto;
        padding: 15px;
    }

    .live-train-card {
        padding: 15px;
        border: 1px solid #f0f0f0;
        border-radius: 12px;
        margin-bottom: 12px;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
    }

    .live-train-card:hover {
        border-color: #3498db;
        background: #f0f7ff;
        transform: translateX(5px);
    }

    .live-train-card.active {
        border-left: 4px solid #3498db;
        background: #f0f7ff;
    }

    .pulse {
        width: 10px;
        height: 10px;
        background: #27ae60;
        border-radius: 50%;
        display: inline-block;
        margin-left: 5px;
        box-shadow: 0 0 0 rgba(39, 174, 96, 0.4);
        animation: pulse 1s infinite;
    }

    @@keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(39, 174, 96, 0.4); }
        70% { box-shadow: 0 0 0 10px rgba(39, 174, 96, 0); }
        100% { box-shadow: 0 0 0 0 rgba(39, 174, 96, 0); }
    }

    .train-info-popup .leaflet-popup-content-wrapper {
        border-radius: 12px;
        padding: 5px;
    }

    .custom-label {
        background: white;
        border: 1px solid #3498db;
        padding: 2px 8px;
        border-radius: 20px;
        font-weight: bold;
        color: #2980b9;
        white-space: nowrap;
    }

    @@media (max-width: 768px) {
        #liveMapContent {
            flex-direction: column-reverse;
            height: calc(100vh - 60px); /* Adjust for mobile navbar */
        }

        .live-sidebar {
            width: 100%;
            height: 40%;
            border-right: none;
            border-top: 1px solid #eee;
            box-shadow: 0 -5px 15px rgba(0,0,0,0.05);
        }

        #mainLiveMap {
            height: 60%;
        }
        
        .sidebar-header {
            padding: 10px 15px;
        }
        
        .train-list {
            padding: 10px;
        }
    }
</style>

<div id="liveMapContent" dir="rtl">
    <div class="live-sidebar">
        <div class="sidebar-header">
            <h5 class="fw-bold mb-1"><i class="fas fa-satellite-dish text-primary me-2"></i> @Localizer["LiveTrips"]</h5>
            <p class="text-muted mb-0 small" id="activeTrainCount">@Localizer["FetchingData"]</p>
        </div>
        <div class="train-list" id="sidebarTrainList">
            <!-- Dynamic Content -->
        </div>
        <div class="p-3 border-top bg-light">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="small text-muted">@Localizer["SystemStatus"]</span>
                <span class="badge bg-success rounded-pill px-2" id="connectionStatus">@Localizer["Connected"]</span>
            </div>
            <p class="mb-0 x-small text-muted" style="font-size: 0.7rem;">@Localizer["UpdateFrequency"]</p>
        </div>
    </div>
    <div id="mainLiveMap"></div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        var map = L.map('mainLiveMap', { attributionControl: false }).setView([29.3759, 47.9774], 10);
        L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
            maxZoom: 19
        }).addTo(map);

        var markers = {};
        var polylines = {};
        var connection = new signalR.HubConnectionBuilder().withUrl("/tripHub").build();

        var trips = @(Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(t => new {
            id = t.Id,
            trainNumber = t.Train?.TrainNumber,
            trainType = t.Train?.Type,
            from = new { name = t.FromStation?.Name, lat = t.FromStation?.Latitude ?? 0, lng = t.FromStation?.Longitude ?? 0 },
            to = new { name = t.ToStation?.Name, lat = t.ToStation?.Latitude ?? 0, lng = t.ToStation?.Longitude ?? 0 },
            departureMs = t.DepartureTime.ToUnixTimeMilliseconds(),
            arrivalMs = t.ArrivalTime.ToUnixTimeMilliseconds()
        }))));

        console.log("üöÇ Total trips loaded:", trips.length);
        console.log("üöÇ Trips data:", trips);
        console.log("‚è∞ Current system time:", new Date().toString());
        console.log("‚è∞ Current Unix ms:", Date.now());

        var trainIcon = L.divIcon({
            html: '<div class="train-marker-wrap"><i class="fas fa-train text-primary fa-lg"></i><div class="pulse"></div></div>',
            className: 'custom-train-icon',
            iconSize: [30, 30],
            iconAnchor: [15, 15]
        });

        function updateSimulation() {
            var now = Date.now();
            var activeCount = 0;
            var sidebarHtml = "";

            trips.forEach(trip => {
                try {
                    var departureTime = trip.departureMs;
                    var arrivalTime = trip.arrivalMs;
                    var totalDuration = arrivalTime - departureTime;
                    
                    if (totalDuration <= 0) totalDuration = 3600000;

                    var progress = (now - departureTime) / totalDuration;
                    var timeUntilDeparture = departureTime - now;
                    var minutesUntilDeparture = Math.max(0, Math.floor(timeUntilDeparture / 60000));

                    if (trip.id === trips[0]?.id) {
                        console.log(`üîç Debug Trip ${trip.trainNumber}: now=${now}, dep=${departureTime}, diff=${timeUntilDeparture}, mins=${minutesUntilDeparture}`);
                    }

                    // Show all upcoming trips for the next 30 days or currently running
                    const isRunning = progress >= -0.01 && progress <= 1;
                    const isDepartingSoon = minutesUntilDeparture >= 0 && minutesUntilDeparture <= 30 * 24 * 60;
                    const shouldShow = isRunning || isDepartingSoon;

                    if (shouldShow) {
                        activeCount++;
                        
                        // If not started yet, show at departure station
                        var lat, lng;
                        if (progress < 0) {
                            lat = trip.from.lat;
                            lng = trip.from.lng;
                        } else if (progress > 1) {
                            lat = trip.to.lat;
                            lng = trip.to.lng;
                        } else {
                            lat = trip.from.lat + (trip.to.lat - trip.from.lat) * progress;
                            lng = trip.from.lng + (trip.to.lng - trip.from.lng) * progress;
                        }

                        if (!markers[trip.id]) {
                            markers[trip.id] = L.marker([lat, lng], { icon: trainIcon }).addTo(map)
                                .bindPopup(`<b>@Localizer["Train"] ${trip.trainNumber}</b><br>@Localizer["From"]: ${trip.from.name}<br>@Localizer["To"]: ${trip.to.name}`);
                            
                            polylines[trip.id] = L.polyline([[trip.from.lat, trip.from.lng], [trip.to.lat, trip.to.lng]], {
                                color: '#3498db',
                                weight: 2,
                                opacity: 0.3,
                                dashArray: '5, 5'
                            }).addTo(map);
                        } else {
                            markers[trip.id].setLatLng([lat, lng]);
                        }

                        var statusText = "";
                        if (progress < 0) {
                            if (minutesUntilDeparture >= 1440) {
                                statusText = `${Math.floor(minutesUntilDeparture / 1440)} @Localizer["Day"]`;
                            } else if (minutesUntilDeparture >= 60) {
                                statusText = `${Math.floor(minutesUntilDeparture / 60)} @Localizer["Hour"]`;
                            } else {
                                statusText = `${minutesUntilDeparture} @Localizer["Minute"]`;
                            }
                        }

                        var statusBadge = progress < 0 
                            ? `<span class="badge bg-warning bg-opacity-10 text-warning small">@Localizer["DepartsIn"] ${statusText}</span>`
                            : `<span class="badge bg-success bg-opacity-10 text-success small">@Localizer["Live"]</span>`;
                        
                        var progressPercent = progress < 0 ? 0 : (progress > 1 ? 100 : progress * 100);
                        
                        sidebarHtml += `
                            <div class="live-train-card" onclick="focusTrain('${trip.id}')">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-bold"><i class="fas fa-train text-primary me-1"></i> @Localizer["Train"] ${trip.trainNumber || '---'}</span>
                                    ${statusBadge}
                                </div>
                                <div class="row g-0 align-items-center">
                                    <div class="col-5 small text-truncate">${trip.from.name}</div>
                                    <div class="col-2 text-center text-muted x-small"><i class="fas fa-arrow-left"></i></div>
                                    <div class="col-5 small text-end text-truncate">${trip.to.name}</div>
                                </div>
                                <div class="progress mt-2" style="height: 4px;">
                                    <div class="progress-bar" role="progressbar" style="width: ${progressPercent}%"></div>
                                </div>
                            </div>
                        `;
                    } else {
                        if (markers[trip.id]) {
                            map.removeLayer(markers[trip.id]);
                            map.removeLayer(polylines[trip.id]);
                            delete markers[trip.id];
                            delete polylines[trip.id];
                        }
                    }
                } catch (err) {
                    console.error("‚ùå Error processing trip:", trip, err);
                }
            });

            console.log("üöÇ Active count:", activeCount);
            console.log("üöÇ Sidebar HTML length:", sidebarHtml.length);

            var sidebarElement = document.getElementById('sidebarTrainList');
            if (sidebarElement) {
                sidebarElement.innerHTML = sidebarHtml || '<p class="text-center text-muted py-5">@Localizer["NoActiveTrips"]</p>';
            } else {
                console.error("‚ùå Sidebar element not found!");
            }
            
            var countElement = document.getElementById('activeTrainCount');
            if (countElement) {
                countElement.innerText = `${activeCount} @Localizer["ActiveTrainsNow"]`;
            }
        }

        function focusTrain(id) {
            if (markers[id]) {
                map.flyTo(markers[id].getLatLng(), 13);
                markers[id].openPopup();
                
                // Highlight card (UI only)
                document.querySelectorAll('.live-train-card').forEach(c => c.classList.remove('active'));
                // Note: since list is re-rendered, it will be lost, but that's okay for now.
            }
        }

        setInterval(updateSimulation, 2000);
        updateSimulation();

        connection.on("ReceiveLocation", function (data) {
            console.log("Real-time position received:", data);
            // This would override simulation if we have a real driver app
            if (markers[data.tripId]) {
                markers[data.tripId].setLatLng([data.lat, data.lng]);
            }
        });

        connection.start().then(() => {
            document.getElementById('connectionStatus').innerText = "@Localizer["LiveConnected"]";
        }).catch(err => {
            document.getElementById('connectionStatus').innerText = "@Localizer["ConnectionError"]";
            document.getElementById('connectionStatus').className = "badge bg-danger rounded-pill px-2";
        });

        // Add station markers
        var stations = {};
        trips.forEach(t => {
            stations[t.from.name] = [t.from.lat, t.from.lng];
            stations[t.to.name] = [t.to.lat, t.to.lng];
        });
        for (var name in stations) {
            L.circleMarker(stations[name], { radius: 4, color: '#95a5a6', fillOpacity: 0.5 }).addTo(map);
        }
    </script>
}
