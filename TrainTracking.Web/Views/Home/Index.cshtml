@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["WelcomeTo"];
}

<!-- World-Class Futuristic Hero Section -->
<div class="container-fluid px-lg-5 mt-4">
    <div class="trips-hero" id="homeHero">
        <!-- Overlay for better text contrast -->
        <div class="hero-overlay-dark"></div>
        
        <!-- Interactive Glow follow -->
        <div class="hero-glow-follow" id="heroGlow"></div>
        
        <!-- Rotating Decorative Circles -->
        <div class="hero-circle circle-1"></div>
        <div class="hero-circle circle-2"></div>
        <div class="hero-circle circle-3"></div>
        <div class="hero-circle circle-4"></div>

        <!-- Unified Content Layer -->
        <div class="row justify-content-center w-100 hero-content-wrapper">
            <div class="col-lg-10 text-center text-white animate-fade-up">
                <div class="identity-badge-premium">
                    <i class="fas fa-train"></i> @Localizer["OfficialCarrier"]
                </div>
                <h1 class="premium-title">@Localizer["WelcomeTo"]</h1>
                <p class="lead mb-5 opacity-90 fs-4 fw-light" style="max-width: 800px; margin: 0 auto 3rem;">@Localizer["HeroSubline"]</p>
                
                <div class="pt-2">
                    <a asp-controller="Trips" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 py-3 fw-bold shadow-lg hover-scale border-0" style="background: linear-gradient(45deg, #005eb8, #0088ff);">
                        <i class="fas fa-search me-2"></i> @Localizer["BrowseTrips"]
                    </a>
                    <a asp-controller="Trips" asp-action="Live" class="btn btn-outline-light btn-lg rounded-pill px-5 py-3 fw-bold ms-lg-3 mt-3 mt-lg-0 hover-scale backdrop-blur" style="border: 1px solid rgba(255,255,255,0.3);">
                        <i class="fas fa-satellite-dish me-2"></i> @Localizer["LiveTracking"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const hero = document.getElementById('homeHero');
    const glow = document.getElementById('heroGlow');
    
    hero.addEventListener('mousemove', (e) => {
        const rect = hero.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        // Update glow position
        glow.style.left = x + 'px';
        glow.style.top = y + 'px';
        
        // Subtle Parallax effect on background
        const moveX = (x - rect.width / 2) / 30;
        const moveY = (y - rect.height / 2) / 30;
        hero.style.backgroundPosition = `calc(50% + ${moveX}px) calc(50% + ${moveY}px)`;
    });

    hero.addEventListener('mouseleave', () => {
        hero.style.backgroundPosition = 'center center';
    });
</script>

